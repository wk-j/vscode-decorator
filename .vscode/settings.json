// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "out": false // set this to true to hide the "out" folder with the compiled JS files
    },
    "search.exclude": {
        "out": true // set this to false to include "out" folder in search results
    },
    "prettifySymbolsMode.substitutions": [{
        "language": "fsharp",
        "substitutions": [
          { "ugly": "fun", "pretty": "〰.", "scope": "keyword.other.function-definition.fsharp" },
          { "ugly": "open", "pretty": "ササ", "scope": "namespace.open.fsharp" },
          { "ugly": "type", "pretty": "ララ", "scope": "record.fsharp" },
          { "ugly": ";", "pretty": "⚡" },
          { "ugly": ",", "pretty": "㆐" },
          //{ "ugly": "->", "pre": "[^->]", "post": "[^->]", "pretty": "⟶" }
          //{ "ugly": ".+", "scope": "variable.parameter.fsharp", "pre": "^", "post": "$", "style": { "border": "1pt solid green" } }
        ]
    }]
}